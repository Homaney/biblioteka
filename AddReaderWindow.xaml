<Window x:Class="biblioteka.AddReaderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить читателя"
        Height="250" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="#fafafa"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" VerticalAlignment="Top">
            <!-- ФИО -->
            <TextBlock Text="ФИО:" FontWeight="Bold" Margin="0,0,0,3"/>
            <TextBox x:Name="FullNameTextBox" Height="30" Padding="5"/>

            <!-- Телефон -->
            <TextBlock Text="Телефон:" FontWeight="Bold" Margin="0,10,0,3"/>
            <TextBox x:Name="PhoneTextBox" Height="30" Padding="5" TextChanged="PhoneTextBox_TextChanged"/>
            <TextBlock x:Name="PhoneWarningTextBlock" 
                       Text="Введите номер в формате +375XXXXXXXXX" 
                       FontSize="12" 
                       Foreground="Gray" 
                       Height="30" RenderTransformOrigin="0.49,1.052" Width="363"/>
        </StackPanel>

        <!-- Кнопка добавить -->
        <Button Grid.Row="1"
                Content="Добавить" 
                Width="120" Height="35"
                HorizontalAlignment="Center"
                Margin="0,15,0,0"
                Background="#4CAF50"
                Foreground="White"
                FontWeight="Bold"
                BorderThickness="0"
                Cursor="Hand"
                Click="AddButton_Click"/>
    </Grid>
</Window>
