<Window x:Class="biblioteka.AddReaderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить читателя"
        Height="373" Width="388"
        WindowStartupLocation="CenterScreen"
        Background="#121212"
        FontFamily="Segoe UI, Inter">
    <Window.Resources>
        <Style x:Key="RoundedTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#2A2A2A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#333333"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="1"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Margin="20" Background="#1E1E1E" CornerRadius="16" BorderBrush="#333333" BorderThickness="1">
        <StackPanel Margin="25">
            <TextBlock Text="Добавление читателя"
                       FontSize="24" FontWeight="Bold"
                       Foreground="#6C5CE7"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,16"/>

            <TextBlock Text="ФИО" Foreground="#B0B0B0" Margin="0,0,0,4"/>
            <TextBox x:Name="FullNameBox"
                     Style="{StaticResource RoundedTextBox}"
                     Margin="0,0,0,12"/>

            <TextBlock Text="Телефон" Foreground="#B0B0B0" Margin="0,0,0,4"/>
            <TextBox x:Name="PhoneBox"
                     Style="{StaticResource RoundedTextBox}"
                     Margin="0,0,0,20"/>

            <Button Content="Добавить"
                    Height="48" Width="150"
                    Background="#00B894" Foreground="White"
                    Cursor="Hand"
                    HorizontalAlignment="Center"
                    Click="AddReader_Click"/>
        </StackPanel>
    </Border>
</Window>