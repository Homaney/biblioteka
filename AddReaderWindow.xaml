<Window x:Class="biblioteka.AddReaderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить читателя"
        Height="550" Width="450"
        WindowStartupLocation="CenterScreen"
        Background="#121212"
        FontFamily="Segoe UI, Inter">
    <Window.Resources>
        <Style x:Key="RoundedTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#2A2A2A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#333333"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="1"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для DatePicker -->
        <Style x:Key="DarkDatePicker" TargetType="DatePicker">
            <Setter Property="Background" Value="#2A2A2A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#333333"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="42"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- Стиль для TextBlock с иконкой -->
        <Style x:Key="IconLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#B0B0B0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>

        <!-- Стиль для кнопки -->
        <Style x:Key="SuccessButton" TargetType="Button">
            <Setter Property="Background" Value="#00B894"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Border Margin="20" Background="#1E1E1E" CornerRadius="12" BorderBrush="#333333" BorderThickness="1">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="25">
                <TextBlock Text="👤 Добавление читателя"
                           FontSize="20" FontWeight="Bold"
                           Foreground="#6C5CE7"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,25"/>

                <!-- Основная информация -->
                <TextBlock Text="👤 ФИО" Style="{StaticResource IconLabel}"/>
                <TextBox x:Name="FullNameBox"
                         Style="{StaticResource RoundedTextBox}"
                         Margin="0,0,0,16"/>

                <TextBlock Text="📞 Телефон" Style="{StaticResource IconLabel}"/>
                <TextBox x:Name="PhoneBox"
                         Style="{StaticResource RoundedTextBox}"
                         Margin="0,0,0,16"
                         GotFocus="PhoneBox_GotFocus"
                         PreviewTextInput="PhoneBox_PreviewTextInput"/>

                <TextBlock Text="🏠 Адрес" Style="{StaticResource IconLabel}"/>
                <TextBox x:Name="AddressBox"
                         Style="{StaticResource RoundedTextBox}"
                         Margin="0,0,0,16"/>

                <!-- Даты -->
                <Grid Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="🎂 Дата рождения" Style="{StaticResource IconLabel}"/>
                        <DatePicker x:Name="BirthDatePicker"
                                    Style="{StaticResource DarkDatePicker}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="📅 Дата регистрации" Style="{StaticResource IconLabel}"/>
                        <DatePicker x:Name="RegistrationDatePicker"
                                    Style="{StaticResource DarkDatePicker}"/>
                    </StackPanel>
                </Grid>

                <!-- Кнопка добавления -->
                <Button Content="✅ Добавить читателя"
                        Style="{StaticResource SuccessButton}"
                        HorizontalAlignment="Stretch"
                        Margin="0,10,0,0"
                        Click="AddReader_Click"/>

                <TextBlock Text="Все поля обязательны для заполнения"
                           Foreground="#666666"
                           FontSize="11"
                           HorizontalAlignment="Center"
                           Margin="0,12,0,0"/>
            </StackPanel>
        </ScrollViewer>
    </Border>
</Window>