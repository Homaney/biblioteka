<Window x:Class="biblioteka.IssueBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Выдача книги" Height="403" Width="400"
        WindowStartupLocation="CenterOwner">


    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" VerticalAlignment="Top">

            <TextBlock Text="Выберите книгу:" FontWeight="Bold" Margin="0,0,0,5"/>
            <ComboBox x:Name="BookComboBox" Height="30" DisplayMemberPath="Title"/>

            <TextBlock Text="Выберите читателя:" FontWeight="Bold" Margin="0,10,0,5"/>
            <StackPanel Orientation="Horizontal">
                <ComboBox x:Name="ReaderComboBox" Height="30" Width="290" DisplayMemberPath="FullName"/>
                <Button Content="+" Width="30" Height="30" Margin="5,0,0,0" Click="AddReader_Click"
                        Background="#2196F3" Foreground="White" FontWeight="Bold" Cursor="Hand"/>
            </StackPanel>

            <TextBlock Text="Дата выдачи:" FontWeight="Bold" Margin="0,10,0,5"/>
            <DatePicker x:Name="IssueDatePicker" SelectedDate="{x:Static sys:DateTime.Now}" Height="30"/>

            <TextBlock Text="Дата возврата:" FontWeight="Bold" Margin="0,10,0,5"/>
            <DatePicker x:Name="ReturnDatePicker" SelectedDate="{x:Static sys:DateTime.Now}" Height="30"/>

        </StackPanel>

        <Button Grid.Row="1" Content="Выдать книгу"
                Width="160" Height="40"
                Background="#4CAF50" Foreground="White" FontWeight="Bold"
                HorizontalAlignment="Center" Margin="0,20,0,0"
                BorderThickness="0" Cursor="Hand"
                Click="IssueButton_Click"/>
    </Grid>
</Window>
