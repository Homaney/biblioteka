<Window x:Class="biblioteka.AddBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить книгу" Height="479" Width="400"
        WindowStartupLocation="CenterScreen" Background="#fafafa">

    <Grid Margin="20,20,20,47">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="Название книги:" FontWeight="Bold" Margin="0 5"/>
            <TextBox x:Name="TitleTextBox" Height="30" Padding="5"/>

            <TextBlock Text="Автор:" FontWeight="Bold" Margin="0 5"/>
            <TextBox x:Name="AuthorTextBox" Height="30" Padding="5"/>

            <TextBlock Text="Год издания:" FontWeight="Bold" Margin="0 5"/>
            <TextBox x:Name="YearTextBox" Height="30" Padding="5"/>

            <TextBlock Text="Жанр:" FontWeight="Bold" Margin="0 5"/>
            <TextBox x:Name="GenreTextBox" Height="30" Padding="5"/>

            <TextBlock Text="Описание:" FontWeight="Bold" Margin="0 5"/>
            <TextBox x:Name="DescriptionTextBox" Height="63" TextWrapping="Wrap" AcceptsReturn="True" Padding="5"/>
        </StackPanel>

        <Button Content="Сохранить"
                Grid.Row="1"
                Width="150"
                Height="40"
                Background="#4CAF50"
                Foreground="White"
                FontWeight="Bold"
                HorizontalAlignment="Center"
                Margin="0 15 0 0"
                BorderThickness="0"
                Cursor="Hand"
                Click="SaveButton_Click"/>
    </Grid>
</Window>
