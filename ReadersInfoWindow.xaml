<Window x:Class="biblioteka.ReadersInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Информация о читателях"
        Height="541" Width="700"
        WindowStartupLocation="CenterScreen"
        Background="#fafafa">

    <Window.Resources>
        <!-- Ресурс тени для карточек книг -->
        <DropShadowEffect x:Key="CardShadow" Color="#888" Direction="270" ShadowDepth="2" BlurRadius="5" Opacity="0.5"/>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Левая часть: список читателей -->
        <Border Background="White" CornerRadius="10" Padding="10" Margin="0 0 10 0"
                BorderBrush="#ddd" BorderThickness="1">
            <StackPanel>
                <TextBlock Text="Список читателей"
                           FontWeight="Bold" FontSize="16"
                           Margin="0 0 0 10"/>
                <ListBox x:Name="ReadersList"
                         SelectionChanged="ReadersList_SelectionChanged"
                         DisplayMemberPath="FullName"
                         BorderThickness="0"
                         Background="#f7f7f7"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                         Height="380"/>
            </StackPanel>
        </Border>

        <!-- Правая часть: карточка читателя -->
        <Border Grid.Column="1" Background="White" CornerRadius="10" Padding="15"
                BorderBrush="#ddd" BorderThickness="1">
            <StackPanel>
                <TextBlock Text="Карточка читателя"
                           FontWeight="Bold" FontSize="16"
                           Margin="0 0 0 10"/>

                <StackPanel x:Name="ReaderCard" Visibility="Collapsed" Opacity="0">
                    <TextBlock x:Name="FullNameText" FontSize="14" FontWeight="Bold" Margin="0 0 0 5"/>
                    <TextBlock x:Name="PhoneText" FontSize="13" Foreground="Gray" Margin="0 0 0 10"/>

                    <TextBlock Text="Выданные книги:" FontWeight="Bold" Margin="0 0 0 5"/>
                    <ListBox x:Name="BooksList" Height="300" BorderThickness="0" Background="#f7f7f7">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="White" CornerRadius="5" 
                                        BorderBrush="#ccc" BorderThickness="1" Padding="10" Margin="0 0 0 5" 
                                        Effect="{StaticResource CardShadow}">
                                    <StackPanel>
                                        <TextBlock Text="{Binding BookTitle}" FontWeight="Bold" FontSize="14"/>
                                        <TextBlock Text="{Binding Status}" Foreground="{Binding StatusColor}" FontSize="12"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>

                <TextBlock x:Name="SelectHint"
                           Text="Выберите читателя, чтобы увидеть информацию"
                           Foreground="Gray" FontStyle="Italic"
                           FontSize="13" VerticalAlignment="Center"
                           Margin="0 20 0 0"
                           TextAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
